<p style="color: green"><%= notice %></p>

<div id="issues" class="w-full p-32">
    <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Issues</h1>
    <%= link_to "New Issues", new_project_issue_path(project_id) , class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    
    </div>

    <div id="posts" class="min-w-min my-2.5 ">
    <table class="table-auto rounded-md border-collapse border border-slate-400 min-w-full">
        <thead>
            <tr class='text-left border-b bg-gray-100'>
            <th>Name</th>
            <th></th>
            </tr>
        </thead>
        <% issues.each do |issue| %>
            <tr class='border-b'>
            <td class='capitalize'><%= issue.title %></td>
            <td><%= link_to "Show", project_issue_path(project_id,issue), class: "text-blue-600 font-medium" %></td>
        </tr>
        <% end %>
        </table> 
    </div>
</div>